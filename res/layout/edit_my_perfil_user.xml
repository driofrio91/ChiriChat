<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            

        >

    <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarAlwaysDrawVerticalTrack="true">


        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView_My_Contact"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/linearLayout"
                android:src="@drawable/ic_launcher"
                />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_toRightOf="@+id/imageView_My_Contact"
                      android:layout_marginTop="40dp"
                      android:id="@+id/data_My_users">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/contact_My_NombreEtiqueta"
                      android:text="Nombre"
                      android:textColor="#FFFFFF"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/contact_My_nombre"
                      android:textSize="25sp"
                      android:textColor="#FFFFFF"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:id="@+id/contact_My_TelefonoEtiqueta"
                      android:text="Telefono"
                      android:textColor="#FFFFFF"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/contact_My_Telefono"
                      android:inputType="number"
                      android:textSize="25sp"
                      android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_below="@+id/imageView_My_Contact"
                      android:layout_margin="15dp"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="15dp"
                      android:id="@+id/contact_My_EstadoEtiqueta"
                      android:text="Estado"
                      android:textColor="#FFFFFF"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:id="@+id/contact_My_Estado"
                      android:textSize="25sp"
                      android:textColor="#FFFFFF"/>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>